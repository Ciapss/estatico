{{#extend "styleguide/layouts/section"}}
	{{#replace "content"}}

		<ul class="sg_color_list">
			{{#each colors}}
				{{#unless hideFromStyleguide}}
					<li class="sg_color_item" title="{{hexValue}}">
						<div class="sg_color_preview" style="background-color: {{hexValue}}"></div>
						<div class="sg_color_name">{{name}}</div>
						<div class="sg_color_variable_name">$color{{removeWhiteSpace name}}</div>
						<div class="sg_color_value">{{hexValue}}</div>
					</li>
				{{/unless}}
			{{/each}}
		</ul>

		<!-- Temporary solution -->
		<hr style="clear: both;" />

		<h2>Generated content for colors.scss</h2>
		<ol>
			<li>Define colors in styleguide/sections/colors.json</li>
			<li>Copy the following code to /assets/css/globals.scss</li>
		</ol>

		{{#each colors}}
			$color{{removeWhiteSpace name}}: {{hexValue}};<br/>
		{{/each}}

	{{/replace}}
{{/extend}}
